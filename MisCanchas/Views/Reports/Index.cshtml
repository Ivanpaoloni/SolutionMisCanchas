@model MisCanchas.Models.ReportViewModel
@{
    ViewData["Title"] = "Reports";
}

<h1><i class="bi bi-graph-up"></i> Reportes de ingresos</h1>
<br />

<table class="table table-bordered table-hover bg-white">

    <caption>Lista de ingresos de los ultimos 3 meses, y el recuento anual corriente.</caption>
    <thead class="">
        <tr>
            <th scope="col">periodo</th>
            <th scope="col">Monto</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@DateTime.Today.AddMonths(-2).ToString("MMMM")</td>
            <td class="text-end">$@Model.secondLastMonth</td>
        </tr>
        <tr>
            <td>@DateTime.Today.AddMonths(-1).ToString("MMMM")</td>
            <td class="text-end">$@Model.lastMonth</td>
        </tr>
        <tr>
            <td>@DateTime.Today.ToString("MMMM") (estimado)</td>
            <td class="text-end">$@Model.currentMonth</td>
        </tr>
        <tr class="table-success">
            <td>Año @DateTime.Today.Year (estimado)</td>
            <td class="text-end">$@Model.currentYear</td>
        </tr>
    </tbody>
</table>
    