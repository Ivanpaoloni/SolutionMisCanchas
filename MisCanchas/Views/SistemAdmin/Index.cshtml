@using MisCanchas.Services;
@{
    ViewData["Title"] = "Sistem Panel";
}
<h1><i class="bi bi-gear-fill"></i> Panel de administración del sistema</h1>
<br />
<div class="row">
    @if (User.IsInRole(Constants.RollAdmin))
    {
        <div class="col-sm-6 mb-4">
            <div class="card text-black mb-3 h-100 shadow p-3 mb-5 rounded">
                <div class="card-body i_flex">
                    <h5 class="card-title"><i class="bi bi-info-circle-fill"></i> Gestionar Canchas</h5>
                    <p class="card-text text-black-50">Administrar los horarios de las canchas.</p>
                    <a asp-controller="SistemAdmin" asp-action="FieldsAdjust" class="btn i_bg-light-success text-success mt-auto">Administrar <i class="bi bi-arrow-right-circle-fill"></i></a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 mb-4">
            <div class="card text-black mb-3 h-100 shadow p-3 mb-5 rounded">
                <div class="card-body i_flex">
                    <h5 class="card-title"><i class="bi bi-person-fill-gear"></i> Gestionar usuarios</h5>
                    <p class="card-text text-black-50">Panel exclusivo para administradores.</p>
                    <a asp-controller="Users" asp-action="List" class="btn i_bg-light-success text-success mt-auto">Gestion de usuarios <i class="bi bi-arrow-right-circle-fill"></i></a>
                </div>
            </div>
        </div>
    }
</div>
